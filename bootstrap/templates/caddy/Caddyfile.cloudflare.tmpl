{
    dynamic_dns {
        provider cloudflare {env.CF_API_TOKEN}
        domains {
            {env.CF_ZONE} {env.CF_SUBDOMAIN}
        }
        check_interval 5m
        versions ipv4
    }
}

{$TLS_HOSTNAME} {
    tls {
        dns cloudflare {env.CF_API_TOKEN}
        protocols tls1.3
    }

    reverse_proxy localhost:80
}
